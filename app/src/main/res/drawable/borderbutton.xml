<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@android:color/white"
                android:width="2dp" />
        </shape>
    </item>

    <!-- Background Color (Your existing button style) -->
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="2dp">
        <shape android:shape="rectangle" android:tint="@color/blue_main">
            <solid android:color="@color/white" /> <!-- Your button background color -->
        </shape>
    </item>
</layer-list>
