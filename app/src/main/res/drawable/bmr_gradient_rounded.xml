<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient fill -->
    <gradient
        android:startColor="#3CB9FF"
    android:endColor="#245799"
    android:angle="0"
    android:type="linear" />

    <!-- Corner radius -->
    <corners android:radius="16dp" />

    <!-- Optional padding inside the drawable -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
